<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:NoiseDataExporter" mc:Ignorable="d" x:Class="NoiseDataExporter.IVAnalysis"
        Title="IVAnalysis" Height="442" Width="627" d:DataContext="{d:DesignInstance {x:Type local:ViewModel}}">
	<Grid>


        <d3:ChartPlotter x:Name="IVPlotter" LegendVisible="True" >
            <d3:Header Content="Transfer curve fitting"/>
			<d3:HorizontalAxis>
				<d3:HorizontalAxisTitle Content="Voltage"/>
			</d3:HorizontalAxis>
			<d3:VerticalAxis>
				<d3:VerticalAxisTitle Content="Current"/>
			</d3:VerticalAxis>
            <d3:LineGraph x:Name="IVCurve"  Stroke="Red" StrokeThickness="3" />
            <d3:LineGraph x:Name="LinearFit" Stroke="Black" StrokeThickness="2"/>
            <d3:VerticalLine x:Name="LeftLimit" Stroke="Blue" StrokeThickness="3"/>
            <d3:VerticalLine x:Name="RightLimit" Stroke="Blue" StrokeThickness="3"/>
        </d3:ChartPlotter>
        
	</Grid>
</Window>
